testclass password_prompt_test for statechart Statechart {
	
	@Test
	operation ready_on_init() {
		enter
		
		raise left_button_clicked
		raise left_button_clicked
		
		assert active (main_region.PasswordPrompt.r1.Ready)
	}
	
	@Test
	operation raises_short_char_on_left_click() {
		ready_on_init
		
		raise left_button_clicked
		
		assert password_prompt_short_char
		assert curr_password == '.'
		
		assert active (main_region.PasswordPrompt.r1.Ready)
	}
	
	@Test
	operation raises_long_char_on_right_click() {
		ready_on_init
		
		raise right_button_clicked
		
		assert password_prompt_long_char
		assert curr_password == '_'
		
		assert active (main_region.PasswordPrompt.r1.Ready)
	}
}
